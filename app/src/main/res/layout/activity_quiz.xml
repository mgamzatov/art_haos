<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/swan_background"
        android:layout_marginStart="-20dp"
        android:layout_marginEnd="-20dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:orientation="vertical"
        tools:context=".QuizActivity">

    <TextView
            android:id="@+id/questionLabel"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:text="Question"
            android:fontFamily="@font/introo"
            android:paddingTop="10dp"
            android:textColor="#000"
            android:background="@drawable/top"
            android:textSize="22sp"
            android:layout_gravity="center"/>

    <RelativeLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <Button
                android:id="@+id/answerBtn1"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:text="answer1"
                android:textSize="15sp"
                android:layout_marginTop="80dp"
                android:onClick="checkAnswer"
                android:background="@drawable/invis_btn"
                android:fontFamily="@font/introo"/>

        <ImageView
                android:id="@+id/wrong_sign1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wrong_sign" android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" android:layout_marginTop="90dp"
                android:layout_marginStart="252dp"
                android:visibility="invisible"/>

        <ImageView
                android:id="@+id/right_sign1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/right_sign" android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" android:layout_marginTop="90dp"
                android:layout_marginStart="252dp"
                android:visibility="invisible"/>
    </RelativeLayout>



    <RelativeLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <Button
                android:id="@+id/answerBtn2"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:textSize="15sp"
                android:text="answer1"
                android:layout_marginTop="60dp"
                android:onClick="checkAnswer"
                android:background="@drawable/invis_btn"
                android:fontFamily="@font/introo"/>

        <ImageView
                android:id="@+id/wrong_sign2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wrong_sign" android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" android:layout_marginTop="70dp"
                android:layout_marginStart="252dp"
                android:visibility="invisible"/>

        <ImageView
                android:id="@+id/right_sign2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textSize="15sp"
                android:src="@drawable/right_sign" android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" android:layout_marginTop="70dp"
                android:layout_marginStart="252dp"
                android:visibility="invisible"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <Button
                android:id="@+id/answerBtn3"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:text="answer1"
                android:layout_marginTop="60dp"
                android:onClick="checkAnswer"
                android:background="@drawable/invis_btn"
                android:fontFamily="@font/introo"/>

        <ImageView
                android:id="@+id/wrong_sign3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wrong_sign" android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" android:layout_marginTop="70dp"
                android:layout_marginStart="252dp"
                android:visibility="invisible"/>

        <ImageView
                android:id="@+id/right_sign3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/right_sign" android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" android:layout_marginTop="70dp"
                android:layout_marginStart="252dp"
                android:visibility="invisible"/>
    </RelativeLayout>
</LinearLayout>