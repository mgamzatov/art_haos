<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scroll"
        android:background="#FFF"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".ConcertActivity">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="75dp"
                    android:layout_width="150dp"
                    android:background="#000"
                    android:orientation="vertical"
                    android:layout_height="150dp">
                <TextView
                        android:text="20"
                        android:layout_marginTop="5dp"
                        android:textColor="#fff"
                        android:layout_gravity="center"
                        android:fontFamily="@font/introo"
                        android:textSize="68sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:text="декабря"
                        android:layout_marginTop="-10dp"
                        android:textColor="#fff"
                        android:layout_gravity="center"
                        android:fontFamily="@font/introo"
                        android:textSize="23sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:text="Четверг, 19:00"
                        android:layout_marginTop="5dp"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                    android:background="@drawable/top"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/more_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Сьюита из музыки к балету «Щелкунчик»"
                        android:fontFamily="@font/introo"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:paddingTop="10dp"
                        android:layout_gravity="center"
                />
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:layout_marginTop="3dp"
                            android:src="@drawable/ic_place_black_24dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Большой Зал Консерватории"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:textSize="17sp"
                            android:layout_gravity="center"
                    />
                </LinearLayout>
            </LinearLayout>
            <ImageView
                    android:src="@drawable/concertcover"
                    android:layout_width="195dp"
                    android:layout_height="195dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="80dp"
            />
            <LinearLayout
                    android:paddingLeft="27dp"
                    android:layout_marginTop="250dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="от"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:textSize="23sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:text="500Р"
                        android:layout_marginStart="10dp"
                        android:textColor="#000"
                        android:fontFamily="@font/introo"
                        android:textSize="30sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>
        </RelativeLayout>
        <TextView
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:text="программа"
                android:fontFamily="@font/introo"
                android:textSize="24sp"
                android:textColor="#fff"
                android:padding="5dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:background="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_marginTop="10dp"
                android:layout_marginStart="40dp"
                android:text="Свиридов"
                android:fontFamily="@font/introo"
                android:textSize="19sp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_marginStart="40dp"
                android:text="«Метель» - музыкальные иллюстрации к повести Пушкина"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_marginTop="10dp"
                android:layout_marginStart="40dp"
                android:text="П. И. Чайковский"
                android:fontFamily="@font/introo"
                android:textSize="19sp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_marginStart="40dp"
                android:text="Сюита из музыки б балету «Щелкунчик» для оркестра, соч. 71а"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:text="участники"
                android:fontFamily="@font/introo"
                android:textSize="24sp"
                android:textColor="#fff"
                android:padding="5dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:background="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_marginTop="5dp"
                android:layout_marginStart="40dp"
                android:text="Государственный академический Большой симфонический оркестр имени П. И. Чайкрвского. Дирижер - Владимир Федосеев"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <Button
                android:id="@+id/buy"
                android:layout_marginTop="20dp"
                android:text="купить билеты"
                android:layout_width="320dp"
                android:layout_height="96dp"
                android:layout_gravity="center"
                android:fontFamily="@font/introo"
                android:textSize="18sp"
                android:paddingBottom="6dp"
                android:background="@drawable/button2"
        />

        <Button
                android:id="@+id/friends"
                android:text="позвать друзей"
                android:layout_width="320dp"
                android:layout_height="96dp"
                android:layout_gravity="center"
                android:fontFamily="@font/introo"
                android:textSize="18sp"
                android:paddingBottom="6dp"
                android:background="@drawable/button2"
                android:layout_marginBottom="50dp"
        />

    </LinearLayout>
</ScrollView>